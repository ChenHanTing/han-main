<!DOCTYPE html>
<html>
  <head>
    <title><%= content_for?(:page_title) ? yield(:page_title) : 'Side Project' %></title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag Ckeditor.cdn_url %>
    <%= favicon_link_tag asset_path('diary.ico') %>
  </head>

  <body>
    <%= render "layouts/navbar" %>

    <% if alert %>
      <div class="alert alert-warning alert-dismissible" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">×</span></button>
        <strong>Warning!&ensp;</strong><%= alert %>
      </div>
    <% end %>

    <% if notice %>
      <div class="alert alert-info" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">×</span></button>
        <%= notice %>
      </div>
    <% end %>

    <div class="row">
      <div class="col-md-2 col-sm-2">
        <div class="list-group">
          <button type="button"
                  class="list-group-item list-group-item-action"
                  onclick="location.href='/assignment/items_imports/new'"
          >
            上傳檔案
          </button>
          <button type="button"
                  class="list-group-item list-group-item-action"
                  onclick="location.href='/assignment/todo_lists'"
          >
            代辦事項（巢狀表單）
          </button>
          <button type="button" class="list-group-item list-group-item-action">Morbi leo risus</button>
          <button type="button" class="list-group-item list-group-item-action">Porta ac consectetur ac</button>
          <button type="button" class="list-group-item list-group-item-action" disabled>Vestibulum at eros</button>
        </div>
      </div>
      <div class="col-md col-sm" data-behavior="vue">
        <%= yield %>
      </div>
    </div>
  </body>
</html>