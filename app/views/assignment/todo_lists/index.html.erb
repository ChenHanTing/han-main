<div class="container">
  <h1>Todo Lists</h1>
  <table class="table table-condensed table-hover">
    <thead>
      <tr>
        <th>Name</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @todo_lists.each do |todo_list| %>
        <tr>
          <td><%= todo_list.name %></td>
          <td>
            <%= link_to (fa_icon 'search'), [:assignment, todo_list] %>
            <%= link_to (fa_icon 'pencil'), edit_assignment_todo_list_path(todo_list) %>
            <%= link_to (fa_icon 'trash'), [:assignment, todo_list], method: :delete, data: { confirm: 'Are you sure?' } %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New List', new_assignment_todo_list_path %>
</div>