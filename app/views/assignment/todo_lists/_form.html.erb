<%= simple_form_for([:assignment, @todo_list]) do |f| %>
  <%= f.error_notification %>

  <div class="row mb-2">
    <div class="card col-md-12 card-primary card-outline">
      <div class="card-header">
        <h3 class="card-title">任務牆</h3>
      </div>
      <div class="card-body">
        <div class="row">
          <div class="col-sm-6"></div>
        </div>
        <div class="row">
          <div class="col-sm-3">
            <div class="form-group">
              <%= f.input :name %>
            </div>
          </div>

          <div class="col-sm"></div>

          <div class="col-sm-2">
            <label class="string optional" for="btn_name">新增任務❤️</label>
            <%= link_to_add_row('Add Task', f, :tasks, class: 'btn btn-primary form-control string') %>
          </div>
        </div>

        <br />

        <div class="row">
          <div class="col-sm-12">
            <div class="form-group">
              <table class='table'>
                <thead>
                  <tr>
                    <th></th>
                    <th>Completed</th>
                    <th>Task Name</th>
                    <th>Due</th>
                  </tr>
                </thead>
                <tbody class='fields'>
                  <%= f.simple_fields_for :tasks do |builder| %>
                    <%= render 'task', f: builder %>
                  <% end %>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-sm-12">
      <div class="btn-group">
        <%= f.button :submit, class: 'btn btn-success' %>
      </div>
    </div>
  </div>
<% end %>