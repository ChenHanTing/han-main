<div class="row">

  <div class="col-sm-6">
    <div  class="group"><h2><%= title %></h2></div>
    <%= simple_form_for @todo, url: url do |f| %>
      <%= f.input :content, input_html: {value: f.object.content || 'Default Content'} %>
      <%= f.input :priority, collection: Todo.priorities, prompt: true %>
      <%= f.input :complete_time, as: :date_time_picker %>

      <%= f.submit 'Submit', data: { disable_with: "Submitting..." }, class: 'btn btn-primary' %>
      <%= link_to 'Back', todolists_path, class: 'btn' %>
    <% end %>
  </div>

  <div class="col-sm-6">
  </div>

</div>
