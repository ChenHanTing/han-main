<%= simple_form_for @question_type, method: method, url: url do |f| %>
  <div class="row mb-2">
    <div class="card col-sm-12 card-primary card-outline">
      <div class="card-header">
        <h3 class="card-title"><i class="fas fa-<%= icon_code %>"></i> <%= title %></h3>
      </div>
      <div class="card-body">
        <div class="row">
          <div class="col-sm-6"></div>
        </div>
        <div class="row">
          <div class="col-sm-6">
            <div class="form-group">
              <%= f.label :name, '問題類型名稱' %>
              <%= f.input :name, label: false,
                          class: 'form-control form-control-sm',
                          input_html: { value: f.object.name, maxlength: 25 } %>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-sm-6">
            <div class="form-group">
              <%= f.label :status, '狀態' %>
              <%= f.input :status, as: :select, class: 'custom-select',
                      label: false, label_method: :second, value_method: :first,
                      collection: type_of_question_statuses,
                      selected:  QuestionType.statuses[f.object.status]
              %>
            </div>
          </div>
        </div>

        <div class="row">
          <div class="form-group col-sm-12">
            <div class="btn-group">
              <%= link_to '取消', admin_question_types_path, class: 'btn btn-primary' %>
            </div>
            <div class="btn-group">
              <%= f.submit '存檔', class: 'btn btn-success', name: 'save' %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>
