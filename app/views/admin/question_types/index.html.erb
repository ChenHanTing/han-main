<% content_for :head do %>
  <title>列表 - 問題類型</title>
<% end %>

<% content_for :page_actions do %>
  問題類型
<% end %>

<section class="container">
  <div class="card card-primary card-outline">
    <div class="card-header">
      <h3 class="card-title"><i class="fas fa-search fa-1"></i> 搜尋問題類型</h3>
    </div>
    <%= render 'search_form' %>
  </div>
  <div class="card card-primary card-outline">
    <div class="card-header">
      <h3 class="card-title"><i class="fas fa-th"></i> 查詢結果</h3>
    </div>
    <div class="card-body table-responsive p-0">
      <table class="table table-hover table-striped table-sm">
        <thead class="thead-dark">
          <tr>
            <th>操作</th>
            <th>順序</th>
            <th>問題類型名稱</th>
          </tr>
        </thead>
        <tbody>
          <%= render partial: 'question_type', collection: @question_types %>
        </tbody>
      </table>
    </div>
    <div class="card-footer clearfix">
      <nav>
        <%= page_entries_info @question_types %>
        <%= paginate @question_types %>
      </nav>
    </div>
  </div>
</section>
