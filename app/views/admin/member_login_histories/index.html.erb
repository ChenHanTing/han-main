<% content_for :head do %>
  <title>列表 - 會員登入歷程</title>
<% end %>

<% content_for :page_actions do %>
  會員登入歷程
<% end %>

<section class="container">
  <div class="card card-primary card-outline">
    <div class="card-header">
      <h3 class="card-title">會員登入歷程</h3>
    </div>
    <div class="card-body table-responsive p-0">
      <table class="table table-hover table-striped table-sm">
        <thead class="thead-dark">
          <tr>
            <th>登入時間</th>
            <th>登入人員</th>
          </tr>
        </thead>
        <tbody>
          <% @member_login_histories.each do |member_login_history| %>
            <tr>
              <td><%= member_login_history.login_at %></td>
              <td><%= member_login_history.login_member %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <div class="card-footer clearfix">
      <nav>
        <%= page_entries_info @member_login_histories %>
        <%= paginate @member_login_histories %>
      </nav>
    </div>
  </div>
</section>
